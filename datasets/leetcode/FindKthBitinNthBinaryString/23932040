class Solution {
	char findKthBit(int n, int k) {
		String s = func(n - 1);
		return s.charAt(k - 1);
	}
	String func(int i) {
		if (i == 0) {
			return "0";
		}
		return func(i - 1) + "1";
	}
	String invert(String s) {
		char[] array = s.toCharArray();
		int i = 0;
	}
	String reverse(String s) {
		StringBuilder str = new StringBuilder(s);
		return str.reverse().toString();
	}
}