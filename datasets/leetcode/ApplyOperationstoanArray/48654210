class Solution {
	int[] applyOperations(int[] nums) {
		int n = nums.length;
		if (n == 1) {
			return nums;
		}
		for (int i = 0; i < n - 1; i++) {
			if (nums[i] == nums[i + 1]) {
				nums[i] = nums[i] * 2;
				nums[i + 1] = 0;
			}
		}
		int arr = new int[n];
		int ind = 0;
		for (int i = 0; i < n; i++) {
			if (nums[i] != 0) {
				arr[ind] = nums[i];
				ind++;
			}
		}
		return arr;
	}
}