class Solution {
	int res = 0;
	int dfs(int i, int[] cost) {
		if (i > cost.length) {
			return 0;
		}
		int left = dfs(i * 2,cost), right = dfs(i * 2 + 1,cost);
		res += Math.abs(left - right);
		return cost[i - 1] + Math.max(left,right);
	}
	int minIncrements(int n, int[] cost) {
		dfs(1,cost);
		return res;
	}
}