class Solution {
	int timeRequiredToBuy(int[] tickets, int k) {
		int n = tickets.length;
		Queue<Integer> que = new LinkedList<>();
		for (int i = 0; i < n; i++) {
			que.add(i);
		}
		int time = 0;
		while (!que.isEmpty()) {
			time++;
			int front = que.poll();
			tickets[front]--;
			if (k == front && tickets[front] == 0) {
				return time;
			}
			if (tickets[front] != 0) {
				que.add(front);
			}
		}
		return time;
	}
}