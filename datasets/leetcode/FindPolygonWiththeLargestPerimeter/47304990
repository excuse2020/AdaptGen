class Solution {
	long largestPerimeter(int[] arr) {
		Arrays.sort(arr);
		int n = arr.length;
		long pre = new long[n];
		pre[0] = 0;
		for (int i = 1; i < n; i++) {
			pre[i] = pre[i - 1] + (long) arr[i - 1];
		}
		for (int i = n - 1; i >= 2; i--) {
			if (pre[i] > (long) arr[i]) {
				return pre[i] + (long) arr[i];
			}
		}
		return -1;
	}
}