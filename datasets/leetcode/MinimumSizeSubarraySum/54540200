class Solution {
	int minSubArrayLen(int target, int[] nums) {
		int n = nums.length;
		int l = 0, r = 0;
		int res = Integer.MAX_VALUE, sum = 0;
		while (r < n) {
			sum += nums[r];
			if (sum < target) {
				r++;
			} 
			else {
				while (sum >= target) {
					res = Math.min(res,(r - l) + 1);
					sum -= nums[l];
					l++;
				}
				r++;
			}
		}
		if (l == 0) {
			return 0;
		}
		return res;
	}
}