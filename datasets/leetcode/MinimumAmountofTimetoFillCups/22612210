class Solution {
	int fillCups(int[] amount) {
		Arrays.sort(amount);
		int high = amount[2];
		int mid = amount[1];
		int low = amount[0];
		int tot = high + mid;
		if (low + mid > high) {
			return tot / 2 + tot % 2;
		}
		if (low == 0 && mid == 0) {
			return high;
		} 
		else {
			return high;
		}
	}
}