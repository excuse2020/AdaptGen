class Solution {
	char findKthBit(int n, int k) {
		return rec(n).charAt(k - 1);
	}
	String rec(int n) {
		if (n == 1) {
			return "0";
		} 
		else {
			String s = rec(n - 1);
			return s + "1";
		}
	}
	String reverse_and_invert(String s) {
		char[] c = s.toCharArray();
		int i = 0;
		int j = c.length - 1;
		Character temp = c[i];
	}
}