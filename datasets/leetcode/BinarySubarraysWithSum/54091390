class Solution {
	int fun(int[] nums, int goal) {
		if (goal < 0) {
			return 0;
		}
		int left = 0, right = 0, sum = 0, count = 0;
		while (right < nums.length) {
			sum += nums[right];
		}
		while (sum > goal) {
			sum -= nums[left];
		}
		left++;
		r count = count + (right - left + 1);
		right++;
		return count;
	}
	int numSubarraysWithSum(int[] nums, int goal) {
		return fun(nums,goal) - fun(nums,goal - 1);
	}
}