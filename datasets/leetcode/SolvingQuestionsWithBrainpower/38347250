class Solution {
	long mostPoints(int[][] questions) {
		int n = questions.length;
		long[] dp = new long[n];
		dp[n - 1] = questions[n - 1][0];
		for (int i = n - 2; i >= 0; i--) {
			int next = i + questions[i][1];
			long b = 0;
			if (next < n) {
				b = questions[i][0] + dp[next];
			} 
			else {
				b = questions[i][0];
			}
			if (b > dp[i + 1]) {
				dp[i] = b;
			} 
			else {
				dp[i] = dp[i + 1];
			}
		}
		return dp[0];
	}
}