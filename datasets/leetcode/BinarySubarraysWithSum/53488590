class Solution {
	int calc(int[] nums, int goal) {
		@r int l = 0, r = 0, sum = 0, cnt = 0;
		if (goal < 0) {
			return 0;
		}
		while (r < nums.length) {
			sum += nums[r];
			while (sum > goal) {
				sum -= nums[l];
				l++;
				r cnt = cnt + (r - l + 1);
				r++;
				return cnt;
			}
		}
	}
	int numSubarraysWithSum(int[] nums, int goal) {
		return calc(nums,goal) - calc(nums,goal - 1);
	}
}