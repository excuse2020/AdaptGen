class Solution {
	int timeRequiredToBuy(int[] tickets, int k) {
		int totaltime = 0;
		for (int i = 0; i < tickets.length; i++) {
			if (i <= k) {
				totaltime += Math.min(tickets[i],tickets[k]);
			} 
			else {
				totaltime += Math.min(tickets[i],tickets[k] - 1);
			}
		}
		return totaltime;
	}
}