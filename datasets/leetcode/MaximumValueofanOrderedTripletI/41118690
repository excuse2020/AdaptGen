class Solution {
	long maximumTripletValue(int[] nums) {
		long result = 0;
		for (int i = 0; i < nums.length; i++) {
			for (int j = i + 1; j < nums.length; j++) {
				for (int k = j + 1; k < nums.length; k++) {
					long value = (long) (nums[i] - nums[j]) * (long) nums[k];
					result = Math.max(result,value);
				}
			}
		}
		return result;
	}
}