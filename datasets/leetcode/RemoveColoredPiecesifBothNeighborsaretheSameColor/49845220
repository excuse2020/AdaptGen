class Solution {
	int countChars(String blocks, int index) {
		char ch = blocks.charAt(index);
		int currIndex = index, distance = 0;
		while (currIndex < blocks.length()) {
			if (blocks.charAt(currIndex) == ch) {
				currIndex++;
				distance++;
			} 
			else {
				break;
			}
		}
		return distance;
	}
	boolean winnerOfGame(String colors) {
		int currCounter = 0, acount = 0, bcount = 0, increment;
		int distance = countChars(colors,currCounter);
	}
}