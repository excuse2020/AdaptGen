class Solution {
	char findKthBit(int n, int k) {
		String result = form("0",1,n);
		return result.charAt(k - 1);
	}
	String form(String str, int i, int n) {
		if (i == n) {
			return str;
		}
		String x = str + "1";
		return form(x,i + 1,n);
	}
	String reverse(String str) {
		char arr = str.toCharArray();
		int i = 0;
	}
}