class Solution {
	int dfs(TreeNode root, int sum) {
		if (root == null) {
			return 0;
		}
		sum = sum * 2 + root.val;
		if (root.left == null && root.right == null) {
			return sum;
		}
		return dfs(root.left,sum) + dfs(root.right,sum);
	}
	int sumRootToLeaf(TreeNode root) {
		return dfs(root,0);
	}
}