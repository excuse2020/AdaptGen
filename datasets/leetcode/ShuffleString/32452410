class Solution {
	String restoreString(String s, int[] indices) {
		int l = indices.length;
		String[] shuffle = new String[l];
		StringBuilder ans = new StringBuilder();
		for (int i = 0; i < l; i++) {
			shuffle[indices[i]] = String.valueOf(s.charAt(i));
		}
		for (String str: shuffle) {	
			ans.append(str);
		}
		return ans.toString();
	}
}