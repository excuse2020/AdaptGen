class Solution {
	int countValidWords(String sentence) {
		int validWords = 0;
		String[] tokens = sentence.trim().split("\\s+");
		for (String token: tokens) {	
			if (validWord(token)) {
				++validWords;
			}
		}
		return validWords;
	}
	boolean isPunctuationMark(char value) {
	}
	boolean validWord(String word) {
		boolean wordAlreadyContainsHyphen = false;
		char currentCharacter;
		char previousCharacter = 0;
		int index = 0;
		currentCharacter = word.charAt(index);
		return false;
		return false;
	}
}