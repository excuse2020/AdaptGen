class Solution {
	int nearestValidPoint(int x, int y, int[][] points) {
		int sIndex = 100000;
		int sDistance = 100000;
		for (int i = 0; i < points.length; i++) {
			if (points[i][0] == x || points[i][1] == y) {
				int distance = Math.abs(x - points[i][0]) + Math.abs(y - points[i][1]);
				if (sDistance > distance) {
					sDistance = distance;
					sIndex = i;
				}
			}
		}
		if (sIndex == 100000) {
			return -1;
		}
		return sIndex;
	}
}