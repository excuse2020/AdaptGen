class Solution {
	int[] rearrangeArray(int[] nums) {
		int posIdx = 0;
		int negIdx = 1;
		int[] res = new int[nums.length];
		for (int i = 0; i < nums.length; i++) {
			if (nums[i] > 0) {
				res[posIdx] = nums[i];
				posIdx += 2;
			} 
			else {
				res[negIdx] = nums[i];
				negIdx += 2;
			}
		}
		return res;
	}
}