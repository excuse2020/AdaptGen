class Solution {
	String makeSmallestPalindrome(String s) {
		StringBuilder sb = new StringBuilder(s);
		int i = 0;
		int j = s.length() - 1;
		while (i <= j) {
			if (s.charAt(i) == s.charAt(j)) {
				sb.setCharAt(i,s.charAt(i));
				sb.setCharAt(j,s.charAt(j));
				i++;
				j--;
			} 
			else {
				if (s.charAt(i) > s.charAt(j)) {
					sb.setCharAt(i,s.charAt(j));
					i++;
					j--;
				} 
				else {
					sb.setCharAt(j,s.charAt(i));
					i++;
					j--;
				}
			}
		}
		return sb.toString();
	}
}