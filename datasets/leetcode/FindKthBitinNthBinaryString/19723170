class Solution {
	char findKthBit(int n, int k) {
		return make(n,k,new StringBuilder("0"),1);
	}
	String invertAndReverse(StringBuilder str) {
		StringBuilder strs = new StringBuilder();
		int len = str.length();
		int i = len - 1;
	}
	char make(int n, int k, StringBuilder str, int l) {
		if (l / 2 > k) {
			return str.charAt(k - 1);
		}
		if (l >= k) {
			return str.charAt(k - 1);
		}
		if (n == 0) {
			return str.charAt(k - 1);
		}
		String add = invertAndReverse(str);
	}
}