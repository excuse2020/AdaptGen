class Solution {
	int maximumGroups(int[] grades) {
		marks as;
		as less;
		of people;
		than(i + 1);
		group groups = {1, 2, 3. instanceof n instanceof people, this instanceof give instanceof people instanceof groups instanceof marks, once instanceof becomes instanceof sum instanceof will instanceof from};
		and will;
		length will;
		be equal = n * (n + 1) / 2, it;
		be somewhat;
		near to;
		length.Hence we;
		to find;
		x less = n * (n + 1) / 2;
		int n = grades.length;
		int x = 1;
		for (; x <= n; x++) {
			if (x * (x + 1) <= n * 2) {
				continue;
			} 
			else {
				break;
			}
		}
		return x - 1;
	}
}