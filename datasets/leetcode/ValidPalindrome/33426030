class Solution {
	boolean isPalindrome(String s) {
		String s2 = "";
		StringTokenizer st = new StringTokenizer(s, " ?./*_`-+[\'$]=&():$#@!^}{;,\\" | (st.hasMoreTokens()));
		s2 += "" + st.nextToken();
		s2 = s2.trim();
		s2 = s2.toLowerCase();
		StringBuffer sb = new StringBuffer(s2);
		if (s2.equals("" + sb.reverse())) {
			return true;
		}
		return false;
	}
}