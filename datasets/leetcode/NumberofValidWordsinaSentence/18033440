class Solution {
	int countValidWords(String sentence) {
		String[] words = sentence.split(" ");
		int validWords = 0;
		for (String word: words) {	
			if (word.equals("")) {
				continue;
			}
		}
		boolean valid = true, hyphen = false;
		int i = 0;
		char ch = word.charAt(i);
		if (Character.isLowerCase(ch)) {
			continue;
		}
	}
}