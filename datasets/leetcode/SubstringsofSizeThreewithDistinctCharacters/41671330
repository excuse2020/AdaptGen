class Solution {
	int countGoodSubstrings(String s) {
		if (s.length() < 3) {
			return 0;
		}
		char a = s.charAt(0);
		char b = s.charAt(1);
		char c = s.charAt(2);
		int count = 0;
		for (int i = 3; i < s.length(); i++) {
			if (a != b && b != c && a != c) {
				count++;
			}
			a = b;
			b = c;
			c = s.charAt(i);
		}
		if (a != b && b != c && a != c) {
			count++;
		}
		return count;
	}
}