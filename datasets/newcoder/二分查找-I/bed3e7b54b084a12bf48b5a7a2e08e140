class Solution {
	int search(int[] nums, int target) {
		int mid = 0;
		int l = 0;
		int r = nums.length - 1;
		while (l <= r) {
			mid = (l + r) / 2;
			if (target < nums[mid]) {
				r = mid - 1;
			} 
			else if (target > nums[mid]) {
				l = mid + 1;
			} 
			else {
				return mid;
			}
		}
		return -1;
	}
}