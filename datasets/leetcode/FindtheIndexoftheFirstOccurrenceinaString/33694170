class Solution {
	int strStr(String haystack, String needle) {
		int i = 0;
		int hlength = haystack.length();
		if (haystack.contains(needle)) {
			while (i < hlength) {
				if (haystack.charAt(i) == needle.charAt(0) && haystack.substring(i,needle.length() + i).equals(needle)) {
					return i;
				}
				i++;
			}
		}
		return -1;
	}
}