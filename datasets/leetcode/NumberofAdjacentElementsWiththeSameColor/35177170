class Solution {
	int[] colorTheArray(int n, int[][] queries) {
		var nums = new int[n];
		var m = queries.length;
		var ans = new int[m];
		var cnt = 0;
		for (var i = 0; i < m; i++) {
			var j = queries[i][0];
			if (nums[j] != 0) {
				cnt -= j == 0 || nums[j - 1] != nums[j] ? 0 : 1;
				cnt -= j == n - 1 || nums[j + 1] != nums[j] ? 0 : 1;
			}
			nums[j] = queries[i][1];
			cnt += j == 0 || nums[j - 1] != nums[j] ? 0 : 1;
			cnt += j == n - 1 || nums[j + 1] != nums[j] ? 0 : 1;
			ans[i] = cnt;
		}
		return ans;
	}
}