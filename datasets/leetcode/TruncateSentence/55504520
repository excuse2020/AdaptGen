class Solution {
	String truncateSentence(String s, int k) {
		if (s.isEmpty()) {
			return s;
		}
		StringBuffer retString = new StringBuffer();
		int totalWords = wordCount(s);
		if (totalWords < k) {
			return s;
		}
		totalWords--;
		int i = 0;
		char c = s.charAt(i);
	}
	int wordCount(String s) {
		int count = 1;
		int index = 0;
	}
}