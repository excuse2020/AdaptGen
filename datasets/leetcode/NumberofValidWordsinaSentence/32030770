class Solution {
	int countValidWords(String sentence) {
		String[] words = sentence.split(" ");
		int count = 0;
		for (String word: words) {	
			if (word.length() == 0) {
				continue;
			}
		}
		boolean isValidWord = true;
		boolean hyphen_found = false;
		int i = 0;
		char c = word.charAt(i);
	}
}