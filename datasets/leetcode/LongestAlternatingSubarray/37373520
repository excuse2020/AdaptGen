class Solution {
	int alternatingSubarray(int[] nums) {
		int ans = -1;
		int n = nums.length;
		int curr = 1;
		int dir = 1;
		for (int i = 1; i < n; i++) {
			if (nums[i] - nums[i - 1] == dir) {
				curr++;
				dir = -dir;
				ans = Math.max(ans,curr);
			} 
			else {
				if (nums[i] - nums[i - 1] == 1) {
					curr = 2;
					dir = -1;
				} 
				else {
					curr = 1;
					dir = 1;
				}
			}
		}
		return ans;
	}
}