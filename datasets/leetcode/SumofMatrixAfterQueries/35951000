class Solution {
	long matrixSumQueries(int n, int[][] queries) {
		long ans = 0;
		int[] vrow = new int[n];
		int[] vcol = new int[n];
		int c = 0;
		int r = 0;
		for (int i = queries.length - 1; i > -1; i--) {
			if (queries[i][0] == 0 && vrow[queries[i][1]] == 0) {
				int val = queries[i][2];
				vrow[queries[i][1]] = 1;
				r++;
				ans += (n - c) * val;
			} 
			else if (queries[i][0] == 1 && vcol[queries[i][1]] == 0) {
				int val = queries[i][2];
				vcol[queries[i][1]] = 1;
				c++;
				ans += (n - r) * val;
			}
		}
		return ans;
	}
}