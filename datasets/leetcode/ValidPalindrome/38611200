class Solution {
	boolean isPalindrome(String s) {
		StringBuilder str = new StringBuilder();
		for (int i = 0; i < s.length(); i++) {
			char ch = s.charAt(i);
			if (Character.isLetterOrDigit(ch)) {
				str.append(Character.toLowerCase(ch));
			}
		}
		int i = 0;
		int j = str.length() - 1;
		while (i <= j) {
			if (str.charAt(i) != str.charAt(j)) {
				return false;
			} 
			else {
				i++;
				j--;
			}
		}
		return true;
	}
}