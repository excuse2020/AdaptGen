class Solution {
	double minimumAverage(int[] nums) {
		int n = nums.length;
		Arrays.sort(nums);
		double minavg = (nums[0] + nums[n - 1]) / 2.0;
		for (int i = 1; i < n / 2; i++) {
			double avg = (nums[i] + nums[n - 1 - i]) / 2.0;
			if (avg < minavg) {
				minavg = avg;
			}
		}
		return minavg;
	}
}